
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  userId String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
  email String @unique
  phone String 
  password String
  age String
  city String
  avatar String?
  address String?
  starRating Int @default(0)
  honorScore Int @default(100)
  createdAt DateTime @default(now())
}
